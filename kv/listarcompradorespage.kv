<ListarCompradoresPage>:

    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"

        # lista de compradores
        ScrollView:
            pos_hint: {"right": 1, "top": 0.9}
            size_hint: (1, 0.83)
#            pos_hint: {"right": 1, "top": 0.75}
#            size_hint: 1, 0.20
            GridLayout:
                cols: 1
                id: lista_compradores
                size_hint_y: None
                spacing: (2, 2)
                height: self.minimum_height
                row_default_height: "90dp"
                row_force_default: True


        GridLayout:
            rows: 1
            pos_hint: {"right": 1, "top": 0.07}
            size_hint: 1, 0.07
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#34c6eb")    #006de7
                Rectangle:
                    size: self.size
                    pos: self.pos
            ImageButton:
                pos_hint: {"right": 1, "top": 0.9}
                size_hint: 0.2, 0.8
                source: "icones/voltar.png"
                #text: "Voltar"
                on_release: app.trocar_tela("ajustespage")