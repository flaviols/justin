#:import utils kivy.utils
<HomePage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"
        Label:
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: "icones/botao_fino.png"
            pos_hint: {"right": 0.8, "top": 0.95 }
            size_hint: (0.55, 0.15)
            text: "Total de compras:R$ 0"
            id: label_total_compras
            markup: True

        # lista de compras
        ScrollView:
            pos_hint: {"right": 1, "top": 0.75}
            size_hint: (1, 0.63)
#            pos_hint: {"right": 1, "top": 0.75}
#            size_hint: 1, 0.20
            GridLayout:
                cols: 1
                id: lista_compras
                size_hint_y: None
                spacing: (2, 2)
                height: self.minimum_height
                row_default_height: "90dp"
                row_force_default: True

        # Voltar para a Home Page
        GridLayout:
            rows: 1
            pos_hint: {"right": 1, "top": 0.07}
            size_hint: (1, 0.07)
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#34c6eb")    #006de7
                Rectangle:
                    size: self.size
                    pos: self.pos
                    #source: "icones/bg1.png"
            ImageButton:
                source: "icones/add.png"
                on_release: app.trocar_tela("incluircomprapage")
            ImageButton:
                source: "icones/salesman.png"
                on_release: app.trocar_tela("listarcompradorespage")
            ImageButton:
                source: "icones/settings.png"
                on_release: app.trocar_tela("ajustespage")