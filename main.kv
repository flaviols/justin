#:import utils kivy.utils

FloatLayout:
    canvas:
        Color:
            rgb: utils.get_color_from_hex("#34c6eb")
        Rectangle:
            pos: self.pos
            size: self.size
    Image:
        pos_hint: {"right": 1, "top": 0.95}
        size_hint: 1, 0.2
        source: "icones/inovati.png"
        id: foto_perfil

    ScreenManager:
        pos_hint:  {"right": 1, "top": 0.7}
        size_hint: 1, 0.7
        id: screen_manager

        LoginPage:
            name: "loginpage"
            id: loginpage

        HomePage:
            name: "homepage"
            id: homepage

        AjustesPage:
            name: "ajustespage"
            id: ajustespage

        FotoPerfilPage:
            name: "fotoperfilpage"
            id: fotoperfilpage

        AdicionarCompradorPage:
            name: "adicionarcompradorpage"
            id: adicionarcompradorpage

        ListarCompradoresPage:
            name: "listarcompradorespage"
            id: listarcompradorespage

        IncluirCompraPage:
            name: "incluircomprapage"
            id: incluircomprapage

        TodasComprasPage:
            name: "todascompraspage"
            id: todascompraspage

        ComprasCompradorPage:
            name: "comprascompradorpage"
            id: comprascompradorpage



